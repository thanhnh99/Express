                    .card-body.bg-light(style="height:150px")
                        h5.card-title= product.product_name
                        p.card-text= product.description
    nav(aria-label='...')
        ul.pagination
            li.page-item.disabled
                a.page-link(href='#', tabindex='-1') Previous
